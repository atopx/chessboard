{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "xqlink",
    "version": "0.1.0",
    "identifier": "top.itmeng.xqlink",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist",
        "removeUnusedCommands": true
    },
    "app": {
        "windows": [
            {
                "title": "中国象棋",
                "width": 660,
                "height": 580,
                "resizable": false,
                "hiddenTitle": true,
                "fullscreen": false,
                "maximizable": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
